<li>
  Name: <%= user.name %>
  <span class="profile-link">
  
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
    <%if !user.friend?(current_user) and user != current_user and !user.pending_friends.include?(current_user)%>
      <%= link_to 'Add a friend',  user_friendships_path(user), method: :post, class: 'profile-link' %>
    <%end%>
  </span>
</li>

<%=!user.friend?(current_user)%>
<%=user != current_user%>
<%=!current_user.pending_friends.include?(user)%>